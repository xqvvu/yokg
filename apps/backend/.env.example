# =============================================================================
# Server
# =============================================================================
PORT=10001
CORS_ALLOWED_ORIGINS=http://localhost:5173
LOCALE=zh-CN
TZ=Asia/Shanghai

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_PORT=5432
POSTGRES_HOST=localhost
POSTGRES_DB=graph-mind
POSTGRES_USER=postgres
POSTGRES_PASSWORD=my_password
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# Redis
# =============================================================================
REDIS_PORT=6379
REDIS_HOST=localhost
REDIS_DB=0
REDIS_PASSWORD=my_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# =============================================================================
# Neo4j
# =============================================================================
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_HOST=localhost
NEO4J_USER=neo4j
NEO4J_PASSWORD=my_password
NEO4J_DB=graph-mind
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30000
NEO4J_URI=neo4j://${NEO4J_HOST}:${NEO4J_BOLT_PORT}

# =============================================================================
# Milvus (Docker Compose only)
# =============================================================================
MILVUS_PORT=19530
MILVUS_METRICS_PORT=9091
MILVUS_ETCD_PORT=2379

# =============================================================================
# Object Storage
# =============================================================================
# Vendor: rustfs | aws-s3 | minio | r2 | oss | memory
OBJECT_STORAGE_VENDOR=minio
OBJECT_STORAGE_ACCESS_KEY=osadmin
OBJECT_STORAGE_SECRET_KEY=my_password
OBJECT_STORAGE_REGION=cn-east-1
OBJECT_STORAGE_FORCE_PATH_STYLE=true
OBJECT_STORAGE_VENDOR_API_PORT=9000
OBJECT_STORAGE_VENDOR_CONSOLE_PORT=9001
OBJECT_STORAGE_ENDPOINT=http://localhost:${OBJECT_STORAGE_VENDOR_API_PORT}

# =============================================================================
# BetterAuth
# =============================================================================
# Generate with: pnpx @better-auth/cli secret
BETTER_AUTH_SECRET=my_better_auth_secret
BETTER_AUTH_URL=http://localhost:${PORT}
