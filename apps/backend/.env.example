# I18n
Locale=zh-CN
TZ=Asia/Shanghai

# CORS Allowed Origins, split by ','
CORS_ALLOWED_ORIGINS=http://localhost:10000

# PostgreSQL
DATABASE_URL=postgres://postgres:mypassword@localhost:5432/graph-mind # Required
# Redis
REDIS_URL=redis://:mypassword@localhost:6379/0 # Required
# Neo4j
NEO4J_URI=neo4j://localhost:7687 # Required
NEO4J_USERNAME=neo4j # Required
NEO4J_PASSWORD=mypassword # Required
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=30000

# Better Auth
# Run `just backend-auth-secret` to generate secret
BETTER_AUTH_SECRET=<run: just backend-auth-secret> # Required
BETTER_AUTH_URL=http://localhost:10001 # Required

# Database passwords
POSTGRES_PASSWORD=mypassword
REDIS_PASSWORD=mypassword
NEO4J_PASSWORD=mypassword

# Database configuration
POSTGRES_DB=graph-mind
POSTGRES_USER=postgres
NEO4J_USER=neo4j
NEO4J_DATABASE=graph-mind

# Timezone
TZ=Asia/Shanghai

# Port mappings (set to 0 to disable external access)
PORT=10001
POSTGRES_PORT=5432
REDIS_PORT=6379
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
MILVUS_PORT=19530
MILVUS_METRICS_PORT=9091
MILVUS_ETCD_PORT=2379
ATTU_PORT=9092
