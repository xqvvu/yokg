{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],

      "@graph-mind/shared/*": ["../../packages/shared/src/*"],
      "@graph-mind/ky/*": ["../../packages/ky/src/*"],

      "#test/*": ["test/*"]
    }
  },
  "exclude": ["node_modules"]
}
